{
    "name": "terminal42/contao-geoip2-country",
    "description": "Detect country of visitor and protect elements in Contao",
    "keywords": ["maxmind", "geoip", "country", "protect", "access"],
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [{
        "name": "terminal42 gmbh",
        "homepage": "http://www.terminal42.ch"
    }],
    "funding": [{
        "type": "github",
        "url": "https://github.com/terminal42"
    }],
    "require": {
        "php": "^7.4",
        "contao/core-bundle": "^4.9",
        "geoip2/geoip2": "~2.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "contao/easy-coding-standard": "^1.0"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Terminal42\\Geoip2CountryBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Terminal42\\Geoip2CountryBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": [
            "vendor/bin/ecs check src/ --fix --ansi"
        ]
    }
}
